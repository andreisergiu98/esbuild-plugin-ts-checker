{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"lib": ["es2017"],
		"rootDir": "src",
		"outDir": "lib",
		"moduleResolution": "node",
		"declaration": true,
		"noImplicitThis": true,
		"importHelpers": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"esModuleInterop": true
	}
}
